<h1>Listing quizzes</h1>

<table>
  <thead>
    <tr>
      <th>Questions numbers</th>
      <th>Title</th>
      <th>Value</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.questions_numbers %></td>
        <td><%= quiz.title %></td>
        <td><%= quiz.value %></td>
        <td><%= quiz.description %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

